<section class="doctor-data">
  <h1>Meet Dr.<%= @doctor.name %></h1>
  <p>Specializes in <%= @doctor.speciality %></p>
  <p>Attended <%= @doctor.university %></p>
  <p>Works at <%= @doctor.hospital.name %></p>
</section>
<section class="patients">
  <h2>Patients</h2>
  <ul>
    <% @doctor.patients.each do |patient| %>
    <li id="patient-<%= patient.id %>">
      <%= patient.name %>
      <%= button_to "Remove", patient_doctors_path(patient.find_patient_doctor(@doctor)), method: :delete %>
    </li>
    <% end %>
  </ul>
</section>
